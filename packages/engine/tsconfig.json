{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["es5", "es6" ],
    "jsx": "react",
    "declaration": true,
    "outDir": "./lib",
    "rootDir": "./",
    "composite": true,
    "importHelpers": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@stackmate/*": ["./src/*"],
      "tests/*": ["./tests/*"]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
