{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": "./",
    "rootDirs": [
      "./src",
      "./profiles",
      "./tests"
    ],
    "paths": {
      "engine/*": [
        "./src/*"
      ],
      "tests/*": [
        "./tests/*"
      ],
      "profiles/*": [
        "./profiles/*"
      ]
    }
  },
  "include": [
    "./index.ts",
    "./src/**/*",
    "./profiles/**/*",
    "./tests/**/*"
  ]
}
